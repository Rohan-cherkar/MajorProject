<% layout("/layouts/boilerplate.ejs") -%>
<div class="row mt-3 mb-3">
  <div class="col-8 offset-3  ">
    <h3 >Listing details</h3>
  </div>
    <div class="card col-6 offset-3 show-card" >
      <img
        src="<%= listing.image %>"
        class="card-img-top show-img"
        alt="Listing Image"
      />
      <div class="card-body">
        <b><p class="card-text"><%= listing.title %></b><br>
        <%= listing.description %> <br>
        &#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
        <%= listing.location %> <br>
        <%= listing.country %> <br>
        </p>
      </div>
    </div>
<br>
  <div class="btns">
    <a class="btn btn-dark edit-btn col-1 offset-3"  href="/listings/<%= listing._id %>/edit">Edit</a>
    <form
      action="/listings/<%= listing._id %>/delete?_method=DELETE"
      method="POST"
    >
      <button class="btn btn-dark offset-6" >Delete</button>
    </form>
  </div>
</div>